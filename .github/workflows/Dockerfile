FROM node:16-alpine
RUN apk add tini
ENTRYPOINT ["tini", "--"]
WORKDIR /usr/src/app
COPY . .
ARG SECRET_COOKIE_PASSWORD
ARG GOOGLE_ANALYTICS_ID
ARG SERVICE_URL
ARG SENTRY_DSN
ARG SENTRY_AUTH_TOKEN
ARG MAILCHIMP_ID
ARG FACEBOOK_PIXEL
ARG ENVIRONMENT
ARG GLEAM_REWARD_URL
ARG ROOT_SEED
ENV SECRET_COOKIE_PASSWORD=$SECRET_COOKIE_PASSWORD
ENV GOOGLE_ANALYTICS_ID=$GOOGLE_ANALYTICS_ID
ENV SERVICE_URL=$SERVICE_URL
ENV SENTRY_DSN=$SENTRY_DSN
ENV SENTRY_AUTH_TOKEN=$SENTRY_AUTH_TOKEN
ENV FACEBOOK_PIXEL=$FACEBOOK_PIXEL
ENV MAILCHIMP_ID=$MAILCHIMP_ID
ENV ENVIRONMENT=$ENVIRONMENT
ENV GLEAM_REWARD_URL=$GLEAM_REWARD_URL
ENV PLPD_CONTRACT_PUBLIC_KEY="0x4b53226be4f9d9a6775b1a9782b3b2e8462384a54219d558ef3b1229bd1602fd"
ENV STAKING_CONTRACT_PUBLIC_KEY="0x4eb61264540a76d3cca1157e9e90fd20bbc327597e5bc53b04a84476cdd84873"
ENV ROOT_SEED=$ROOT_SEED
RUN npm install -g npm@8.12.1
RUN npm run-script build
CMD ["npm", "run-script", "start"]
